
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/CoreLayout.cshtml";
}



<html lang="zxx">

<body>
	<link href="~/coreblogtema/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link href="~/coreblogtema/web/css/contact.css" rel='stylesheet' type='text/css' />
	<link href="~/coreblogtema/web/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/coreblogtema/web/css/fontawesome-all.css" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
		  rel="stylesheet">

	<section class="main-content-w3layouts-agileits">

		<h3 class="tittle">İletişim</h3>
		<p class="sub text-center">Fikir ve düşüncelerin benim için çok değerli!</p>
		<div class="contact-map inner-sec">

            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12497.886177041508!2d27.1766507!3d38.4536737!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb16364e47894b32f!2sFolkart%20Towers!5e0!3m2!1str!2str!4v1674414123004!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="map" style="border:0" allowfullscreen=""></iframe>
		</div>
		<div class="ad-inf-sec bg-light">
			<div class="container">
				<div class="address row">

					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-map"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Adres</h6>
								<p>
									İzmir, TR

								</p>
							</div>
						</div>

					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-envelope"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>E-posta</h6>
								<p>
									E-posta :
									<a href="mailto:example@email.com"> eposta@blog.com.tr</a>

								</p>
							</div>

						</div>
					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="fas fa-mobile-alt"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Telefon</h6>
								<p>+90 234 567 8901</p>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="contact_grid_right">
				<form action="#" method="post">
					<div class="row contact_left_grid">
						<div class="col-md-6 con-left">
							<div class="form-group">
								<label for="validationCustom01 my-2">Adın</label>
								<input class="form-control" type="text" name="Name" placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="exampleFormControlInput1">E-postan</label>
								<input class="form-control" type="email" name="Email" placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="validationCustom03 my-2">Konu</label>
								<input class="form-control" type="text" name="Subject" placeholder="" required="">
							</div>
						</div>
						<div class="col-md-6 con-right">
							<div class="form-group">
								<label for="textarea">Mesajın</label>
								<textarea id="textarea" placeholder="" name="Message"></textarea>
							</div>
							<input class="form-control" type="submit" value="Gönder">

						</div>
					</div>
				</form>
			</div>
		</div>
	</section>

</body>

</html>
