@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/CoreLayout.cshtml";
}
@using(Html.BeginForm("Index", "Login", FormMethod.Post)){
	<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Giriş Yap</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form action="#" method="post">
					<div class="form-group">
						<label for="exampleInputEmail1 mb-2">E-Posta Adresin</label>
						@Html.TextBoxFor(x=> x.Email, new { @class="form-control"})
						<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
						<small id="emailHelp" class="form-text text-muted">E-Posta adresini kimseyle paylaşmayacağız.</small>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1 mb-2">Şifren</label>
						@Html.PasswordFor(x=> x.Password, new { @class="form-control"})
						<input type="password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
					</div>
					<div class="form-check mb-2">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						@*@Html.CheckBoxFor(x=> x.Email, new {@class="form-control"})*@
						<label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<p><a href="register.html"> Hesabın Yok Mu ?</a></p>
				</form>
			</div>
		</div>
	</div>
</section>
})


